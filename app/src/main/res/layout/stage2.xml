<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stage_base">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/stage2_title" />

    <ImageView
        android:id="@+id/find"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="145dp"
        android:src="@drawable/find0" />

    <!-- Hearts -->
    <RatingBar
        android:id="@+id/hart"
        style="@style/CustomRatingBar"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="15dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1" />

    <!-- Timer Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="440dp"
        android:layout_height="20dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="45dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar" />

    <!-- Timer Icon -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/timer" />

    <Button
        android:id="@+id/pause"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="pause"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/stage_original"
        android:layout_width="324dp"
        android:layout_height="300dp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/stage2_original" />

    <com.mobile.photowiz.view.CustomView
        android:id="@+id/custom_view"
        android:layout_width="324dp"
        android:layout_height="300dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        app:imageSrc="@drawable/stage2_prob" />

    <Button
        android:id="@+id/overlay_button"
        android:layout_width="324dp"
        android:layout_height="305dp"
        android:layout_marginStart="375dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="틀린 부분 클릭 시 확인 버튼"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer1"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="140dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/correct_circle"
        android:alpha="0"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="245dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/correct_circle"
        android:alpha="0"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="245dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/correct_circle"
        android:alpha="0"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="180dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/correct_circle"
        android:alpha="0"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer5"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="120dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/correct_circle"
        android:alpha="0"
        android:visibility="visible" />

    <!-- Ready Image -->
    <ImageView
        android:id="@+id/ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="57dp"
        android:src="@drawable/ready"
        android:visibility="gone" />

    <!-- Go Image -->
    <ImageView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="57dp"
        android:src="@drawable/go"
        android:visibility="gone" />

    <!-- Game Over Image -->
    <ImageView
        android:id="@+id/game_over"
        android:layout_width="310dp"
        android:layout_height="245dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="48dp"
        android:src="@drawable/game_over"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/incorrect_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/x"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/correct_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/o"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/pause_resume_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pause"
        android:background="@android:color/transparent"
        android:contentDescription="Pause Overlay"
        android:visibility="invisible"
        android:clickable="false" />

    <ImageView
        android:id="@+id/stage_clear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/stage_clear"
        android:visibility="gone"
        android:contentDescription="Stage Clear"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</FrameLayout>
