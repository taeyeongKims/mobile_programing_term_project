<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stage_base">

    <!-- Stage Title -->

    <!-- Find Count -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/stage1_title" />

    <ImageView
        android:id="@+id/find"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="145dp"
        android:src="@drawable/find0" />

    <!-- Hearts -->
    <RatingBar
        android:id="@+id/hart"
        style="@style/CustomRatingBar"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1" />

    <!-- Timer Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="440dp"
        android:layout_height="20dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="55dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar" />

    <!-- Timer Icon -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/timer" />

    <!-- Pause Button -->
    <Button
        android:id="@+id/pause"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:text="Pause"
        android:visibility="invisible" />

    <!-- Original Stage Image -->
    <ImageView
        android:id="@+id/stage_original"
        android:layout_width="324dp"
        android:layout_height="300dp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/stage1_original" />

    <com.mobile.photowiz.view.CustomView
        android:id="@+id/custom_view"
        android:layout_width="324dp"
        android:layout_height="300dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        app:imageSrc="@drawable/stage1_prob" />

    <Button
        android:id="@+id/overlay_button"
        android:layout_width="324dp"
        android:layout_height="305dp"
        android:layout_marginStart="375dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="틀린 부분 클릭 시 확인 버튼"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/answer1"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="140dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/correct_circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/answer2"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="270dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/correct_circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/answer3"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="222dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/correct_circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/answer4"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="285dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/correct_circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/answer5"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="170dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/correct_circle"
        android:visibility="invisible" />

    <!-- Ready Image -->
    <ImageView
        android:id="@+id/ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="57dp"
        android:src="@drawable/ready"
        android:visibility="gone" />

    <!-- Go Image -->
    <ImageView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="57dp"
        android:src="@drawable/go"
        android:visibility="gone" />

    <!-- Game Over Image -->
    <ImageView
        android:id="@+id/game_over"
        android:layout_width="310dp"
        android:layout_height="245dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="48dp"
        android:src="@drawable/game_over"
        android:visibility="gone" />

    <!-- Incorrect Image -->
    <ImageView
        android:id="@+id/incorrect_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/x"
        android:visibility="gone" />
</FrameLayout>
